<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group detail</h2>
      <table class="table">
        <thead>
          <tr>
            <td></td>
            <td>グループ名</td>
            <td>紹介文</td>
            <td>メンバー</td>
            <td></td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @group.get_image, size: '50x50' %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |member| %>
                <%= member.name %><br>
              <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_user.id %>
              <%= link_to "edit", edit_group_path(@group), class: "btn btn-success" %>
              <% elsif @group.users.include?(current_user) %>
              <%= link_to "Leave this group", group_path(@group), method: :delete, class: "btn btn-danger" %>
              <% else %>
              <%= link_to "Join this group", group_join_path(@group), class: "btn btn-success" %>
              <% end %>
            </td>
            <% if @group.owner_id == current_user.id %>
            <td><%= link_to 'Notice an Event',group_new_mail_path(@group), class: "btn btn-primary" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

     
    </div>
  </div>
</div>